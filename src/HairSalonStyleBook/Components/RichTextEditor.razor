@code {
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public EventCallback<string> ValueChanged { get; set; }

    private string _editorId = $"editor-{Guid.NewGuid():N}"[..14];
    private bool _initialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // ì´ˆê¸° HTML ì„¤ì •
            await JS.InvokeVoidAsync("eval",
                $"document.getElementById('{_editorId}').innerHTML = {System.Text.Json.JsonSerializer.Serialize(Value ?? "")};");
            _initialized = true;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        // ì™¸ë¶€ì—ì„œ Valueê°€ ë³€ê²½ëœ ê²½ìš° (ì˜ˆ: ìˆ˜ì • ëª¨ë“œ ì§„ì…)
        if (_initialized)
        {
            var currentHtml = await JS.InvokeAsync<string>("eval",
                $"document.getElementById('{_editorId}').innerHTML");
            if (currentHtml != Value)
            {
                await JS.InvokeVoidAsync("eval",
                    $"document.getElementById('{_editorId}').innerHTML = {System.Text.Json.JsonSerializer.Serialize(Value ?? "")};");
            }
        }
    }

    private async Task ExecCommand(string command)
    {
        await JS.InvokeVoidAsync("eval",
            $"document.getElementById('{_editorId}').focus(); document.execCommand('{command}', false, null);");
    }

    private async Task InsertHeading()
    {
        await JS.InvokeVoidAsync("eval",
            $"document.getElementById('{_editorId}').focus(); document.execCommand('formatBlock', false, 'h3');");
    }

    private bool _showIconPalette;

    private void ToggleIconPalette()
    {
        _showIconPalette = !_showIconPalette;
    }

    private async Task InsertIcon(string icon)
    {
        await JS.InvokeVoidAsync("eval",
            $"document.getElementById('{_editorId}').focus(); document.execCommand('insertText', false, '{icon} ');");
    }

    private async Task OnContentChanged()
    {
        var html = await JS.InvokeAsync<string>("eval",
            $"document.getElementById('{_editorId}').innerHTML");
        if (html != Value)
        {
            await ValueChanged.InvokeAsync(html);
        }
    }
}

