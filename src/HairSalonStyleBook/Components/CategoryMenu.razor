@using HairSalonStyleBook.Models

<div class="category-menu">
    @foreach (var category in _categories)
    {
        <button class="btn category-btn @(SelectedCategory == category ? "active" : "")"
                @onclick="() => OnCategorySelected.InvokeAsync(category)">
            @GetCategoryLabel(category)
        </button>
    }
</div>

@code {
    [Parameter] public StyleCategory SelectedCategory { get; set; } = StyleCategory.전체;
    [Parameter] public EventCallback<StyleCategory> OnCategorySelected { get; set; }

    private readonly StyleCategory[] _categories = { StyleCategory.전체, StyleCategory.커트, StyleCategory.펌, StyleCategory.염색 };

    private static string GetCategoryLabel(StyleCategory category) => category switch
    {
        StyleCategory.전체 => "전체",
        StyleCategory.커트 => "커트",
        StyleCategory.펌 => "펌",
        StyleCategory.염색 => "염색",
        _ => ""
    };
}

<style>
    .category-menu {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 0;
    }

    .category-btn {
        font-family: var(--font-serif);
        font-size: 0.9rem;
        padding: 0.4rem 1.2rem;
        border: 1px solid var(--salon-light-gray);
        background: var(--salon-white);
        color: var(--salon-black);
        border-radius: 20px;
        transition: all 0.3s ease;
        letter-spacing: 0.05em;
    }

    .category-btn:hover {
        border-color: var(--salon-green);
        color: var(--salon-green);
    }

    .category-btn.active {
        background-color: var(--salon-green);
        color: var(--salon-white);
        border-color: var(--salon-green);
    }

    @@media (max-width: 576px) {
        .category-btn {
            font-size: 0.8rem;
            padding: 0.35rem 0.8rem;
        }
    }
</style>
