@using HairSalonStyleBook.Models
@inject IJSRuntime JS

<!-- 갤러리 사진 꾸미기 컴포넌트 (공통: Admin + User) -->

<div class="gd-container">
    <!-- 미리보기 영역 -->
    <div class="gd-preview frame-@(_editDeco.FrameType)" @ref="_previewRef"
         @onpointermove="OnPointerMove" @onpointermove:preventDefault="_isDragging"
         @onpointerup="OnPointerUp">
        <img src="@Item.ImageUrl" alt="갤러리 이미지" class="gd-image" />
        @if (!string.IsNullOrEmpty(_editDeco.TextContent))
        {
            <div class="gd-free-text gd-font-@(_editDeco.TextFont) @(EditMode && _dragTarget == "text" ? "dragging" : "")"
                 style="left:@Pct(_editDeco.TextX);top:@Pct(_editDeco.TextY);color:@_editDeco.TextColor;transform:translate(-50%,-50%) scale(@Scl(_editDeco.TextScale));"
                 @onpointerdown="@(e => OnPointerDown(e, "text"))" @onpointerdown:preventDefault>
                @_editDeco.TextContent
            </div>
        }
        @if (!string.IsNullOrEmpty(_editDeco.Sticker))
        {
            <div class="gd-free-sticker @(EditMode && _dragTarget == "sticker" ? "dragging" : "")"
                 style="left:@Pct(_editDeco.StickerX);top:@Pct(_editDeco.StickerY);transform:translate(-50%,-50%) scale(@Scl(_editDeco.StickerScale));"
                 @onpointerdown="@(e => OnPointerDown(e, "sticker"))" @onpointerdown:preventDefault>
                @_editDeco.Sticker
            </div>
        }
        @if (ShowWatermark)
        {
            <div class="gd-watermark">늘~오던</div>
        }
    </div>

    @if (EditMode)
    {
        <div class="gd-editor">
            <!-- 방문일자 -->
            <div class="gd-section">
                <label class="gd-label"><i class="bi bi-calendar3"></i> 방문일자</label>
                <input type="date" class="form-control form-control-sm"
                       value="@(_editVisitDate?.ToString("yyyy-MM-dd"))"
                       @onchange="OnVisitDateChange" />
            </div>

            <!-- 해시태그 -->
            <div class="gd-section">
                <label class="gd-label"><i class="bi bi-hash"></i> 해시태그</label>
                <div class="gd-hashtag-wrap">
                    @foreach (var tag in _editHashtags)
                    {
                        var t = tag;
                        <span class="gd-hashtag-chip">
                            #@t
                            <button class="gd-hashtag-remove" @onclick="() => RemoveHashtag(t)">
                                <i class="bi bi-x"></i>
                            </button>
                        </span>
                    }
                    <input type="text" class="gd-hashtag-input" placeholder="태그 입력 후 Enter"
                           @bind="_newHashtag" @bind:event="oninput"
                           @onkeydown="OnHashtagKeyDown" />
                </div>
            </div>

            <!-- 액자 선택 -->
            <div class="gd-section">
                <label class="gd-label"><i class="bi bi-frame"></i> 액자</label>
                <div class="gd-frame-list">
                    @foreach (var frame in _frames)
                    {
                        <button class="gd-frame-btn @(_editDeco.FrameType == frame.Key ? "active" : "")"
                                @onclick="() => _editDeco.FrameType = frame.Key">
                            <div class="gd-frame-thumb frame-@frame.Key">
                                <div class="gd-frame-inner"></div>
                            </div>
                            <span>@frame.Name</span>
                        </button>
                    }
                </div>
            </div>

            <!-- 텍스트 입력 -->
            <div class="gd-section">
                <label class="gd-label"><i class="bi bi-fonts"></i> 텍스트 <small class="text-muted">(드래그로 이동)</small></label>
                <input type="text" class="form-control form-control-sm" maxlength="50"
                       placeholder="텍스트를 입력하세요"
                       @bind="_editDeco.TextContent" @bind:event="oninput" />
            </div>

            <!-- 글씨체 -->
            <div class="gd-section">
                <label class="gd-label"><i class="bi bi-pen"></i> 글씨체</label>
                <div class="gd-font-list">
                    @foreach (var font in _fonts)
                    {
                        <button class="gd-font-btn @(_editDeco.TextFont == font.Key ? "active" : "") gd-font-@font.Key"
                                @onclick="() => _editDeco.TextFont = font.Key">
                            @font.Preview
                        </button>
                    }
                </div>
            </div>

            <!-- 텍스트 색상 + 크기 -->
            <div class="gd-row">
                <div class="gd-section gd-flex1">
                    <label class="gd-label">색상</label>
                    <div class="gd-color-list">
                        @foreach (var color in _colors)
                        {
                            <button class="gd-color-btn @(_editDeco.TextColor == color ? "active" : "")"
                                    style="background: @color;" @onclick="() => _editDeco.TextColor = color"></button>
                        }
                    </div>
                </div>
                <div class="gd-section" style="min-width:90px;">
                    <label class="gd-label">크기</label>
                    <input type="range" class="form-range form-range-sm" min="0.5" max="3" step="0.1"
                           value="@_editDeco.TextScale"
                           @oninput="@(e => _editDeco.TextScale = double.TryParse(e.Value?.ToString(), out var v) ? v : 1.0)" />
                </div>
            </div>

            <!-- 스티커 -->
            <div class="gd-section">
                <label class="gd-label"><i class="bi bi-emoji-smile"></i> 스티커 <small class="text-muted">(드래그로 이동)</small></label>
                <div class="gd-sticker-grid">
                    <button class="gd-sticker-btn @(string.IsNullOrEmpty(_editDeco.Sticker) ? "active" : "")"
                            @onclick="() => _editDeco.Sticker = string.Empty">
                        <i class="bi bi-x-circle" style="font-size:1rem;color:#ccc;"></i>
                    </button>
                    @foreach (var s in _stickers)
                    {
                        <button class="gd-sticker-btn @(_editDeco.Sticker == s ? "active" : "")"
                                @onclick="() => _editDeco.Sticker = s">
                            @s
                        </button>
                    }
                </div>
                @if (!string.IsNullOrEmpty(_editDeco.Sticker))
                {
                    <div class="gd-section" style="margin-top:0.3rem;">
                        <label class="gd-label">스티커 크기</label>
                        <input type="range" class="form-range form-range-sm" min="0.5" max="3" step="0.1"
                               value="@_editDeco.StickerScale"
                               @oninput="@(e => _editDeco.StickerScale = double.TryParse(e.Value?.ToString(), out var v) ? v : 1.0)" />
                    </div>
                }
            </div>

            <!-- 히스토리 -->
            @if (Item.History.Any())
            {
                <div class="gd-section">
                    <label class="gd-label">
                        <i class="bi bi-clock-history"></i> 히스토리
                        <span class="gd-hist-count">@Item.History.Count</span>
                    </label>
                    <div class="gd-history-list">
                        @foreach (var h in Item.History.OrderByDescending(x => x.Timestamp).Take(10))
                        {
                            <button class="gd-hist-item" @onclick="() => RollbackTo(h.Decoration)">
                                <span class="gd-hist-time">@h.Timestamp.ToLocalTime().ToString("MM/dd HH:mm")</span>
                                <span class="gd-hist-desc">
                                    @(string.IsNullOrEmpty(h.Decoration.FrameType) || h.Decoration.FrameType == "none" ? "" : GetFrameName(h.Decoration.FrameType) + " ")
                                    @(string.IsNullOrEmpty(h.Decoration.TextContent) ? "(텍스트 없음)" : h.Decoration.TextContent.Length > 10 ? h.Decoration.TextContent[..10] + "..." : h.Decoration.TextContent)
                                </span>
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </button>
                        }
                    </div>
                </div>
            }

            <!-- 저장/취소 -->
            <div class="gd-actions">
                <button class="btn btn-salon btn-sm" @onclick="SaveDecoration" disabled="@_saving">
                    @if (_saving)
                    {
                        <span class="spinner-border spinner-border-sm me-1"></span>
                    }
                    <i class="bi bi-check-lg"></i> 저장
                </button>
                <button class="btn btn-outline-secondary btn-sm" @onclick="CancelEdit">
                    <i class="bi bi-x-lg"></i> 취소
                </button>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public GalleryItem Item { get; set; } = new();
    [Parameter] public bool EditMode { get; set; }
    [Parameter] public bool ShowWatermark { get; set; }
    [Parameter] public EventCallback<GalleryItem> OnSave { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private GalleryDecoration _editDeco = new();
    private bool _saving;
    private ElementReference _previewRef;

    // 방문일자 / 해시태그 편집용
    private DateTime? _editVisitDate;
    private List<string> _editHashtags = new();
    private string _newHashtag = "";

    // 드래그 상태
    private bool _isDragging;
    private string _dragTarget = ""; // "sticker" or "text"

    // 액자 프리셋 (10종)
    private static readonly (string Key, string Name)[] _frames = new[]
    {
        ("none", "없음"), ("polaroid", "폴라로이드"), ("vintage", "빈티지"),
        ("film", "필름"), ("elegant", "엘레건트"), ("simple", "심플"),
        ("shadow", "그림자"), ("rounded", "둥근"), ("magazine", "매거진"), ("neon", "네온"),
    };

    // 글씨체 (8종)
    private static readonly (string Key, string Preview)[] _fonts = new[]
    {
        ("default", "기본"), ("handwrite", "손글씨"), ("cute", "귀여운"), ("brush", "붓글씨"),
        ("elegant", "명조"), ("round", "둥근"), ("bold", "굵은"), ("title", "제목"),
    };

    // 색상 팔레트 (16색)
    private static readonly string[] _colors = new[]
    {
        "#ffffff", "#000000", "#f5e6d3", "#d4a574",
        "#7ba383", "#e8847c", "#6b8eb5", "#c9b1d4",
        "#ff6b9d", "#ffd93d", "#6bcb77", "#4d96ff",
        "#ff8c42", "#a855f7", "#f472b6", "#94a3b8",
    };

    // 스티커 (이모지)
    private static readonly string[] _stickers = new[]
    {
        "\u2764\ufe0f", "\ud83d\udc96", "\ud83d\udc95", "\u2728", "\ud83c\udf1f", "\ud83c\udf38",
        "\ud83c\udf39", "\ud83c\udf3b", "\ud83c\udf3a", "\ud83c\udf37", "\ud83e\udd8b", "\ud83c\udf40",
        "\ud83d\udc8e", "\ud83d\udc51", "\ud83c\udf80", "\ud83c\udf81",
        "\ud83d\udcf7", "\ud83c\udfa8", "\ud83c\udfb5", "\u2615",
        "\ud83c\udf08", "\ud83e\uddf8", "\ud83d\udc36", "\ud83d\udc31",
    };

    protected override void OnParametersSet()
    {
        _editDeco = CloneDeco(Item.Decoration);
        _editVisitDate = Item.VisitDate;
        _editHashtags = new List<string>(Item.Hashtags);
    }

    // % 포맷 헬퍼
    private static string Pct(double v) => $"{v:F1}%";
    private static string Scl(double v) => $"{v:F2}";

    #region 드래그 처리

    private void OnPointerDown(PointerEventArgs e, string target)
    {
        if (!EditMode) return;
        _isDragging = true;
        _dragTarget = target;
    }

    private async Task OnPointerMove(PointerEventArgs e)
    {
        if (!_isDragging) return;

        try
        {
            // JS로 preview 영역의 bounds 가져오기
            var rect = await JS.InvokeAsync<BoundingRect>("gdGetRect", _previewRef);
            if (rect.Width <= 0 || rect.Height <= 0) return;

            double x = Math.Clamp((e.ClientX - rect.Left) / rect.Width * 100, 0, 100);
            double y = Math.Clamp((e.ClientY - rect.Top) / rect.Height * 100, 0, 100);

            if (_dragTarget == "sticker")
            {
                _editDeco.StickerX = x;
                _editDeco.StickerY = y;
            }
            else if (_dragTarget == "text")
            {
                _editDeco.TextX = x;
                _editDeco.TextY = y;
            }
            StateHasChanged();
        }
        catch { /* JS interop 실패 시 무시 */ }
    }

    private void OnPointerUp(PointerEventArgs e)
    {
        _isDragging = false;
        _dragTarget = "";
    }

    // JS에서 반환할 구조체
    private record BoundingRect(double Left, double Top, double Width, double Height);

    #endregion

    #region 해시태그 입력

    private async Task OnHashtagKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_newHashtag))
        {
            var tag = _newHashtag.Trim().TrimStart('#');
            if (tag.Length > 0 && !_editHashtags.Contains(tag))
                _editHashtags.Add(tag);
            _newHashtag = "";
            await SaveMetadataAsync();
        }
    }

    private async Task RemoveHashtag(string tag)
    {
        _editHashtags.Remove(tag);
        await SaveMetadataAsync();
    }

    #endregion

    private async Task OnVisitDateChange(ChangeEventArgs e)
    {
        _editVisitDate = DateTime.TryParse(e.Value?.ToString(), out var dt) ? dt : null;
        await SaveMetadataAsync();
    }

    /// <summary>방문일자/해시태그만 즉시 저장 (꾸미기 히스토리 없이)</summary>
    private async Task SaveMetadataAsync()
    {
        Item.VisitDate = _editVisitDate;
        Item.Hashtags = new List<string>(_editHashtags);
        await OnSave.InvokeAsync(Item);
    }

    private async Task SaveDecoration()
    {
        _saving = true;
        StateHasChanged();

        var current = Item.Decoration;
        if (HasDecoChanged(current, _editDeco))
        {
            Item.History.Add(new DecorationHistory
            {
                Decoration = CloneDeco(current),
                Timestamp = DateTime.UtcNow
            });
            while (Item.History.Count > 20)
                Item.History.RemoveAt(0);
        }

        Item.Decoration = CloneDeco(_editDeco);
        Item.VisitDate = _editVisitDate;
        Item.Hashtags = new List<string>(_editHashtags);
        await OnSave.InvokeAsync(Item);
        _saving = false;
    }

    private async Task CancelEdit()
    {
        _editDeco = CloneDeco(Item.Decoration);
        _editVisitDate = Item.VisitDate;
        _editHashtags = new List<string>(Item.Hashtags);
        await OnCancel.InvokeAsync();
    }

    private void RollbackTo(GalleryDecoration deco) => _editDeco = CloneDeco(deco);

    private static GalleryDecoration CloneDeco(GalleryDecoration d) => new()
    {
        FrameType = d.FrameType,
        TextContent = d.TextContent,
        TextFont = d.TextFont,
        TextPosition = d.TextPosition,
        TextColor = d.TextColor,
        TextX = d.TextX,
        TextY = d.TextY,
        TextScale = d.TextScale,
        Sticker = d.Sticker,
        StickerPosition = d.StickerPosition,
        StickerX = d.StickerX,
        StickerY = d.StickerY,
        StickerScale = d.StickerScale,
    };

    private static bool HasDecoChanged(GalleryDecoration a, GalleryDecoration b) =>
        a.FrameType != b.FrameType || a.TextContent != b.TextContent ||
        a.TextFont != b.TextFont || a.TextColor != b.TextColor ||
        a.Sticker != b.Sticker ||
        Math.Abs(a.TextX - b.TextX) > 0.5 || Math.Abs(a.TextY - b.TextY) > 0.5 ||
        Math.Abs(a.TextScale - b.TextScale) > 0.05 ||
        Math.Abs(a.StickerX - b.StickerX) > 0.5 || Math.Abs(a.StickerY - b.StickerY) > 0.5 ||
        Math.Abs(a.StickerScale - b.StickerScale) > 0.05;

    private static string GetFrameName(string key) => key switch
    {
        "polaroid" => "폴라로이드", "vintage" => "빈티지", "film" => "필름",
        "elegant" => "엘레건트", "simple" => "심플", "shadow" => "그림자",
        "rounded" => "둥근", "magazine" => "매거진", "neon" => "네온", _ => ""
    };
}

