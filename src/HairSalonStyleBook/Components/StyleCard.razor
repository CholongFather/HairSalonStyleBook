@inject NavigationManager Nav

<div class="style-card" @onclick="GoToDetail">
    <div class="style-card-image">
        @if (!string.IsNullOrEmpty(Style.ThumbnailUrl))
        {
            <img src="@Style.ThumbnailUrl" alt="@Style.Title" loading="lazy" />
        }
        else
        {
            <div class="style-card-placeholder">
                <i class="bi bi-image"></i>
            </div>
        }
        <span class="style-card-category">@Style.Category</span>
    </div>
    <div class="style-card-body">
        <h3 class="style-card-title">@Style.Title</h3>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public StylePost Style { get; set; } = default!;

    private void GoToDetail()
    {
        Nav.NavigateTo($"style/{Style.Id}");
    }
}

<style>
    .style-card {
        background: var(--salon-white);
        cursor: pointer;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid var(--salon-light-gray);
        border-radius: 8px;
    }

    .style-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }

    .style-card-image {
        position: relative;
        aspect-ratio: 3 / 4;
        overflow: hidden;
        background: #f0f0f0;
    }

    .style-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .style-card:hover .style-card-image img {
        transform: scale(1.05);
    }

    .style-card-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--salon-light-gray);
        font-size: 2.5rem;
    }

    .style-card-category {
        position: absolute;
        top: 8px;
        left: 8px;
        background: var(--salon-green);
        color: var(--salon-white);
        font-size: 0.7rem;
        padding: 2px 10px;
        border-radius: 10px;
        font-family: var(--font-serif);
        letter-spacing: 0.05em;
    }

    .style-card-body {
        padding: 0.75rem;
    }

    .style-card-title {
        font-family: var(--font-serif);
        font-size: 0.9rem;
        font-weight: 700;
        margin: 0;
        color: var(--salon-black);
        line-height: 1.4;
    }
</style>
