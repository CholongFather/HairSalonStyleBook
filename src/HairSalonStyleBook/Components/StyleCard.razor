@inject NavigationManager Nav

<div class="style-card" @onclick="GoToDetail">
    <div class="style-card-image">
        @if (!string.IsNullOrEmpty(Style.ThumbnailUrl))
        {
            <img src="@Style.ThumbnailUrl" alt="@Style.Title" loading="lazy"
                 onload="this.classList.add('loaded')"
                 onerror="this.onerror=null;this.src='images/default-style.svg'" />
        }
        else
        {
            <div class="style-card-placeholder">
                <i class="bi bi-image"></i>
            </div>
        }
        <!-- 그라데이션 오버레이 -->
        <div class="style-card-overlay"></div>
        <!-- 워터마크 -->
        <div class="style-card-watermark">늘~오던</div>
        <!-- 이미지 위 태그 -->
        <div class="style-card-tags">
            <span class="card-tag @(Style.Category.IsFemale() ? "tag-female" : "tag-male")">@Style.Category.ToDisplayName()</span>
            <span class="card-tag tag-service">@Style.Service</span>
        </div>
    </div>
    <div class="style-card-body">
        <h3 class="style-card-title">@Style.Title</h3>
        @if (Style.RecommendedHairTypes.Any())
        {
            <div class="card-hair-types">
                @foreach (var hairType in Style.RecommendedHairTypes.Take(4))
                {
                    <span class="card-hair-badge">@hairType</span>
                }
            </div>
        }
        @if (Style.Hashtags.Any())
        {
            <div class="style-card-hashtags">
                @foreach (var tag in Style.Hashtags.Take(3))
                {
                    <span class="card-hashtag">#@tag</span>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired] public StylePost Style { get; set; } = default!;

    private void GoToDetail()
    {
        Nav.NavigateTo($"style/{Style.Id}");
    }
}

<style>
    .style-card {
        background: var(--salon-white);
        cursor: pointer;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        border: 1px solid var(--salon-light-gray);
        border-radius: 14px;
        position: relative;
    }

    .style-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(0, 0, 0, 0.06);
        border-color: transparent;
    }

    .style-card:active {
        transform: translateY(-2px) scale(0.98);
    }

    .style-card-image {
        position: relative;
        aspect-ratio: 3 / 4;
        overflow: hidden;
        background: linear-gradient(135deg, #f0ebe0 0%, #e8e3d8 100%);
        background-size: 200% 100%;
        animation: shimmer 1.5s ease-in-out infinite;
    }

    @@keyframes shimmer {
        0% { background-position: 200% 0; }
        100% { background-position: -200% 0; }
    }

    .style-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0;
        transition: opacity 0.4s ease, transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .style-card-image img.loaded {
        opacity: 1;
    }

    .style-card:hover .style-card-image img {
        transform: scale(1.06);
    }

    .style-card-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 50%;
        background: linear-gradient(to top, rgba(0,0,0,0.12) 0%, transparent 100%);
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.4s;
    }

    .style-card:hover .style-card-overlay {
        opacity: 1;
    }

    /* 워터마크 */
    .style-card-watermark {
        position: absolute;
        bottom: 8px;
        right: 8px;
        font-family: var(--font-serif);
        font-size: 0.55rem;
        color: rgba(255, 255, 255, 0.35);
        letter-spacing: 0.05em;
        pointer-events: none;
        z-index: 2;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        user-select: none;
    }

    .style-card-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--salon-light-gray);
        font-size: 2.5rem;
    }

    /* 이미지 위 태그 */
    .style-card-tags {
        position: absolute;
        top: 8px;
        left: 8px;
        display: flex;
        gap: 4px;
    }

    .card-tag {
        font-size: 0.6rem;
        padding: 3px 10px;
        border-radius: 12px;
        font-family: var(--font-serif);
        letter-spacing: 0.03em;
        font-weight: 600;
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.2);
    }

    .card-tag.tag-female {
        background: rgba(212, 160, 160, 0.85);
        color: #fff;
    }

    .card-tag.tag-male {
        background: rgba(107, 155, 210, 0.85);
        color: #fff;
    }

    .card-tag.tag-service {
        background: rgba(44, 44, 44, 0.6);
        color: #fff;
    }

    /* 카드 본문 */
    .style-card-body {
        padding: 0.65rem 0.75rem 0.75rem;
    }

    .style-card-title {
        font-family: var(--font-serif);
        font-size: 0.85rem;
        font-weight: 700;
        margin: 0 0 0.3rem;
        color: var(--salon-black);
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* 추천 모질 배지 */
    .card-hair-types {
        display: flex;
        flex-wrap: wrap;
        gap: 0.2rem;
        margin-bottom: 0.25rem;
    }

    .card-hair-badge {
        font-family: var(--font-serif);
        font-size: 0.55rem;
        padding: 1px 6px;
        border-radius: 8px;
        background: rgba(123, 163, 131, 0.12);
        color: var(--salon-green);
        font-weight: 600;
        letter-spacing: -0.01em;
    }

    /* 해시태그 미리보기 */
    .style-card-hashtags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
    }

    .card-hashtag {
        font-family: var(--font-serif);
        font-size: 0.63rem;
        color: var(--salon-green);
        letter-spacing: -0.01em;
        opacity: 0.75;
    }

    /* 태블릿 반응형 */
    @@media (min-width: 768px) {
        .style-card-title {
            font-size: 0.95rem;
        }

        .card-tag {
            font-size: 0.68rem;
            padding: 4px 12px;
        }

        .card-hair-badge {
            font-size: 0.62rem;
            padding: 2px 8px;
        }

        .card-hashtag {
            font-size: 0.72rem;
        }

        .style-card-body {
            padding: 0.75rem 0.85rem 0.85rem;
        }
    }
</style>
