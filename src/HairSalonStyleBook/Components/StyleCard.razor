@inject NavigationManager Nav

<div class="style-card" @onclick="GoToDetail">
    <div class="style-card-image">
        @if (!string.IsNullOrEmpty(Style.ThumbnailUrl))
        {
            <img src="@Style.ThumbnailUrl" alt="@Style.Title" loading="lazy" />
        }
        else
        {
            <div class="style-card-placeholder">
                <i class="bi bi-image"></i>
            </div>
        }
        <!-- 이미지 위 태그 -->
        <div class="style-card-tags">
            <span class="card-tag @(Style.Category.IsFemale() ? "tag-female" : "tag-male")">@Style.Category.ToDisplayName()</span>
            <span class="card-tag tag-service">@Style.Service</span>
        </div>
    </div>
    <div class="style-card-body">
        <h3 class="style-card-title">@Style.Title</h3>
        @if (Style.Hashtags.Any())
        {
            <div class="style-card-hashtags">
                @foreach (var tag in Style.Hashtags.Take(3))
                {
                    <span class="card-hashtag">#@tag</span>
                }
            </div>
        }
    </div>
</div>

@code {
    [Parameter, EditorRequired] public StylePost Style { get; set; } = default!;

    private void GoToDetail()
    {
        Nav.NavigateTo($"style/{Style.Id}");
    }
}

<style>
    .style-card {
        background: var(--salon-white);
        cursor: pointer;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid var(--salon-light-gray);
        border-radius: 12px;
    }

    .style-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
    }

    .style-card-image {
        position: relative;
        aspect-ratio: 3 / 4;
        overflow: hidden;
        background: #f0ebe0;
    }

    .style-card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .style-card:hover .style-card-image img {
        transform: scale(1.04);
    }

    .style-card-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--salon-light-gray);
        font-size: 2.5rem;
    }

    /* 이미지 위 태그 */
    .style-card-tags {
        position: absolute;
        top: 8px;
        left: 8px;
        display: flex;
        gap: 4px;
    }

    .card-tag {
        font-size: 0.62rem;
        padding: 2px 8px;
        border-radius: 10px;
        font-family: var(--font-serif);
        letter-spacing: 0.03em;
        font-weight: 500;
        backdrop-filter: blur(4px);
    }

    .card-tag.tag-female {
        background: rgba(212, 160, 160, 0.9);
        color: #fff;
    }

    .card-tag.tag-male {
        background: rgba(107, 155, 210, 0.9);
        color: #fff;
    }

    .card-tag.tag-service {
        background: rgba(44, 44, 44, 0.65);
        color: #fff;
    }

    /* 카드 본문 */
    .style-card-body {
        padding: 0.6rem 0.7rem 0.7rem;
    }

    .style-card-title {
        font-family: var(--font-serif);
        font-size: 0.85rem;
        font-weight: 700;
        margin: 0 0 0.3rem;
        color: var(--salon-black);
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* 해시태그 미리보기 */
    .style-card-hashtags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.25rem;
    }

    .card-hashtag {
        font-family: var(--font-serif);
        font-size: 0.65rem;
        color: var(--salon-green);
        letter-spacing: -0.01em;
    }
</style>
