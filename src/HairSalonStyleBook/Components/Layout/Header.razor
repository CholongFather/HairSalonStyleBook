@inject NavigationManager Nav
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<header class="salon-header">
    <div class="container header-container">
        <div class="header-spacer"></div>
        <a href="" class="salon-logo" @onclick:preventDefault="false">
            <span class="logo-deco">&#10047;</span>
            늘~오던 헤어살롱
            <span class="logo-deco">&#10047;</span>
        </a>
        <div class="header-actions">
            <button class="header-link theme-toggle" @onclick="ToggleTheme" title="@(_isDark ? "라이트 모드" : "다크 모드")">
                <i class="bi @(_isDark ? "bi-sun-fill" : "bi-moon-fill")"></i>
            </button>
            <AuthorizeView>
                <Authorized Context="authContext">
                    <AuthorizeView Roles="Admin">
                        <Authorized Context="adminContext">
                            <a href="admin" class="header-link header-admin" title="관리자">
                                <i class="bi bi-gear-fill"></i>
                            </a>
                        </Authorized>
                    </AuthorizeView>
                    <button class="header-link" @onclick="HandleLogout" title="로그아웃">
                        <i class="bi bi-box-arrow-right"></i>
                    </button>
                </Authorized>
            </AuthorizeView>
        </div>
    </div>
    <div class="header-subtitle">Style Book</div>
</header>

@code {
    private bool _isDark;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var theme = await JS.InvokeAsync<string>("salonTheme.get");
            _isDark = theme == "dark";
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDark = !_isDark;
        await JS.InvokeVoidAsync("salonTheme.set", _isDark ? "dark" : "light");
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        ((AdminAuthStateProvider)AuthStateProvider).NotifyAuthStateChanged();
        Nav.NavigateTo("login", forceLoad: true);
    }
}

<style>
    .salon-header {
        background-color: var(--salon-white);
        padding: 1.5rem 0 0.5rem;
        position: relative;
    }

    .header-container {
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .header-spacer {
        flex: 1;
    }

    .salon-logo {
        font-family: var(--font-serif);
        font-size: 1.8rem;
        font-weight: 900;
        color: var(--salon-black);
        letter-spacing: 0.15em;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .salon-logo:hover {
        color: var(--salon-black);
    }

    .logo-deco {
        font-size: 0.7rem;
        color: var(--salon-accent);
        opacity: 0.6;
    }

    .header-subtitle {
        text-align: center;
        font-family: var(--font-serif);
        font-size: 0.7rem;
        color: var(--salon-gray);
        letter-spacing: 0.4em;
        text-transform: uppercase;
        margin-top: 0.1rem;
        padding-bottom: 0.3rem;
    }

    .header-actions {
        flex: 1;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        gap: 0.5rem;
    }

    .header-link {
        color: var(--salon-gray);
        font-size: 1rem;
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.35rem;
        transition: all 0.3s ease;
        text-decoration: none;
        border-radius: 50%;
    }

    .header-link:hover {
        color: var(--salon-green);
        background: rgba(123, 163, 131, 0.1);
    }

    .header-admin {
        color: var(--salon-green);
    }

    .theme-toggle i {
        transition: transform 0.3s ease;
    }

    .theme-toggle:hover i {
        transform: rotate(20deg);
    }

    @@media (max-width: 576px) {
        .salon-logo {
            font-size: 1.4rem;
        }

        .salon-header {
            padding: 1rem 0 0.3rem;
        }

        .logo-deco {
            font-size: 0.55rem;
        }

        .header-subtitle {
            font-size: 0.6rem;
        }
    }
</style>
