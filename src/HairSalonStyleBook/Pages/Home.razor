        font-family: var(--font-serif);
        font-size: 0.8rem;
        color: var(--salon-gray);
        border-radius: 9px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        letter-spacing: 0.02em;
    }

    .tab-item i {
        font-size: 0.85rem;
        transition: color 0.3s;
    }

    .tab-item:hover {
        color: var(--salon-dark);
        background: rgba(123, 163, 131, 0.06);
    }

    .tab-item.active {
        background: var(--salon-green);
        color: #fff;
        box-shadow: 0 2px 8px rgba(123, 163, 131, 0.25);
    }

    .tab-item.active i {
        color: #fff;
    }

