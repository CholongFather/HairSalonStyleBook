@page "/"
@attribute [Authorize]
@inject IStyleService StyleService
@inject IShopConfigService ShopConfigService
@inject NavigationManager Nav
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>늘~오던 헤어살롱</PageTitle>

<div class="container salon-list-page">
    <!-- 탭 네비게이션 -->
    <div class="tab-bar">
        <button class="tab-item @(_activeTab == 0 ? "active" : "")" @onclick="() => SwitchTab(0)">
            <i class="bi bi-scissors"></i>
            <span>스타일북</span>
        </button>
        <button class="tab-item @(_activeTab == 1 ? "active" : "")" @onclick="() => SwitchTab(1)">
            <i class="bi bi-shop"></i>
            <span>매장</span>
        </button>
        <button class="tab-item @(_activeTab == 2 ? "active" : "")" @onclick="() => SwitchTab(2)">
            <i class="bi bi-share"></i>
            <span>SNS</span>
        </button>
    </div>

    <!-- 탭 콘텐츠 영역 -->
    <div class="tab-content-area">
        @if (_activeTab == 0)
        {
            <!-- 탭 0: 스타일북 -->
            <div class="tab-panel tab-fade-in">
                <!-- 카테고리 & 시술 필터 -->
                <CategoryMenu SelectedCategory="_selectedCategory" OnCategorySelected="OnCategoryChanged"
                              SelectedService="_selectedService" OnServiceSelected="OnServiceChanged" />

                <!-- 검색바 -->
                <SearchBar SearchText="@_searchText" OnSearch="OnSearch" />

                <!-- 필터 활성 시 초기화 버튼 -->
                @if (HasActiveFilter)
                {
                    <div class="filter-reset-bar">
                        <span class="filter-active-info">
                            @if (_selectedCategory != StyleCategory.전체) { <span class="filter-chip">@_selectedCategory.ToDisplayName()</span> }
                            @if (_selectedService >= 0) { <span class="filter-chip">@((ServiceType)_selectedService)</span> }
                            @if (!string.IsNullOrWhiteSpace(_searchText)) { <span class="filter-chip">"@_searchText"</span> }
                        </span>
                        <button class="btn-filter-reset" @onclick="ClearAllFilters">
                            <i class="bi bi-x-circle"></i> 필터 해제
                        </button>
                    </div>
                }

                <!-- 결과 카운트 -->
                @if (!_loading && _filteredStyles.Any())
                {
                    <div class="result-count">
                        <span>@_filteredStyles.Count</span>개의 스타일
                    </div>
                }

                <!-- 스타일 카드 그리드 -->
                @if (_loading)
                {
                    <div class="style-grid">
                        @for (var i = 0; i < 6; i++)
                        {
                            <div class="skeleton-card-wrapper">
                                <div class="skeleton skeleton-card"></div>
                                <div class="skeleton skeleton-text mt-2"></div>
                                <div class="skeleton skeleton-text-sm"></div>
                            </div>
                        }
                    </div>
                }
                else if (_loadError)
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-wifi-off"></i>
                        </div>
                        <p class="empty-text">데이터를 불러올 수 없습니다</p>
                        <p class="empty-sub">네트워크 연결을 확인해주세요</p>
                        <button class="btn btn-salon btn-sm mt-2" @onclick="LoadStyles">
                            <i class="bi bi-arrow-clockwise"></i> 다시 시도
                        </button>
                    </div>
                }
                else if (!_pagedStyles.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-scissors"></i>
                        </div>
                        <p class="empty-text">등록된 스타일이 없습니다</p>
                        <p class="empty-sub">새로운 스타일이 곧 업데이트 됩니다</p>
                    </div>
                }
                else
                {
                    <div class="swipe-area">
                        <div class="style-grid @_slideClass" @key="_pageKey">
                            @foreach (var style in _pagedStyles)
                            {
                                <StyleCard Style="style" />
                            }
                        </div>
                    </div>

                    <!-- 페이지 인디케이터 -->
                    @if (_totalPages > 1)
                    {
                        <div class="page-indicator">
                            <span class="page-indicator-text">@_currentPage / @_totalPages</span>
                        </div>
                        <Pagination CurrentPage="_currentPage" TotalPages="_totalPages" OnPageChanged="OnPageChanged" />
                    }
                }
            </div>
        }
        else if (_activeTab == 1)
        {
            <!-- 탭 1: 매장 -->
            <div class="tab-panel tab-fade-in">
                <!-- 서브탭: WiFi / 계좌 -->
                <div class="sub-tab-bar">
                    <button class="sub-tab-item @(_shopTab == 0 ? "active" : "")" @onclick="() => _shopTab = 0">
                        <i class="bi bi-wifi"></i> WiFi
                    </button>
                    <button class="sub-tab-item @(_shopTab == 1 ? "active" : "")" @onclick="() => _shopTab = 1">
                        <i class="bi bi-credit-card"></i> 계좌
                    </button>
                </div>

                @if (_shopTab == 0)
                {
                    <!-- WiFi 정보 -->
                    <div class="info-card">
                        <div class="info-card-icon">
                            <i class="bi bi-wifi"></i>
                        </div>
                        <h3 class="info-card-title">WiFi 정보</h3>
                        <div class="info-card-divider"></div>
                        <div class="info-row">
                            <span class="info-label">5G</span>
                            <span class="info-value">@_shopConfig.WifiName5G</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">2.4G</span>
                            <span class="info-value">@_shopConfig.WifiName24G</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">비밀번호</span>
                            <span class="info-value info-pw">@_shopConfig.WifiPassword</span>
                        </div>
                        <div class="qr-section">
                            <p class="qr-label">QR 코드로 간편 연결</p>
                            <div class="qr-dual">
                                <div class="qr-dual-item">
                                    <span class="qr-dual-label">5G</span>
                                    <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.Wifi5GQrUrl)">
                                        <img src="@_shopConfig.Wifi5GQrUrl" alt="5G WiFi QR" class="qr-image-sm" loading="lazy" />
                                    </div>
                                </div>
                                <div class="qr-dual-item">
                                    <span class="qr-dual-label">2.4G</span>
                                    <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.Wifi24GQrUrl)">
                                        <img src="@_shopConfig.Wifi24GQrUrl" alt="2.4G WiFi QR" class="qr-image-sm" loading="lazy" />
                                    </div>
                                </div>
                            </div>
                            <span class="qr-tap-hint">
                                <i class="bi bi-arrows-fullscreen"></i> 터치하여 확대
                            </span>
                        </div>
                        <p class="info-note">
                            <i class="bi bi-info-circle"></i>
                            매장 내에서 자유롭게 이용하세요
                        </p>
                    </div>
                }
                else
                {
                    <!-- 계좌 정보 -->
                    <div class="info-card">
                        <div class="info-card-icon">
                            <i class="bi bi-credit-card"></i>
                        </div>
                        <h3 class="info-card-title">계좌 정보</h3>
                        <div class="info-card-divider"></div>
                        <div class="info-row">
                            <span class="info-label">은행</span>
                            <span class="info-value">@_shopConfig.BankName</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">계좌번호</span>
                            <span class="info-value info-pw">@_shopConfig.AccountNumber</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">예금주</span>
                            <span class="info-value">@_shopConfig.AccountHolder</span>
                        </div>
                        <div class="qr-section">
                            <p class="qr-label">QR 스캔하여 계좌정보 확인</p>
                            <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.AccountQrUrl)">
                                <img src="@_shopConfig.AccountQrUrl" alt="계좌 QR Code" class="qr-image" loading="lazy" />
                                <span class="qr-tap-hint">
                                    <i class="bi bi-phone"></i> 스마트폰으로 스캔하세요
                                </span>
                            </div>
                        </div>
                        <p class="info-note">
                            <i class="bi bi-info-circle"></i>
                            시술 후 계좌이체도 가능합니다
                        </p>
                    </div>
                }
            </div>
        }
        else if (_activeTab == 2)
        {
            <!-- 탭 2: SNS -->
            <div class="tab-panel tab-fade-in">
                <div class="sns-cards">
                    <!-- 인스타그램 -->
                    @if (!string.IsNullOrEmpty(_shopConfig.InstagramUrl))
                    {
                        <div class="sns-card" @onclick="() => OpenLink(_shopConfig.InstagramUrl)">
                            <div class="sns-card-icon sns-instagram">
                                <i class="bi bi-instagram"></i>
                            </div>
                            <div class="sns-card-body">
                                <h4 class="sns-card-title">Instagram</h4>
                                <p class="sns-card-desc">실시간 스타일 업데이트</p>
                            </div>
                            <div class="sns-card-qr" @onclick:stopPropagation @onclick="() => OpenQr(_shopConfig.InstagramQrUrl)">
                                <img src="@_shopConfig.InstagramQrUrl" alt="Instagram QR" loading="lazy" />
                            </div>
                            <i class="bi bi-chevron-right sns-card-arrow"></i>
                        </div>
                    }

                    <!-- 네이버 플레이스 -->
                    @if (!string.IsNullOrEmpty(_shopConfig.NaverPlaceUrl))
                    {
                        <div class="sns-card" @onclick="() => OpenLink(_shopConfig.NaverPlaceUrl)">
                            <div class="sns-card-icon sns-naver">
                                <span class="naver-n">N</span>
                            </div>
                            <div class="sns-card-body">
                                <h4 class="sns-card-title">네이버 플레이스</h4>
                                <p class="sns-card-desc">매장 정보 & 예약</p>
                            </div>
                            <i class="bi bi-chevron-right sns-card-arrow"></i>
                        </div>

                        <!-- 네이버 리뷰 -->
                        <div class="sns-card" @onclick="() => OpenLink(_shopConfig.NaverReviewUrl)">
                            <div class="sns-card-icon sns-review">
                                <i class="bi bi-chat-heart"></i>
                            </div>
                            <div class="sns-card-body">
                                <h4 class="sns-card-title">리뷰</h4>
                                <p class="sns-card-desc">고객님들의 솔직한 후기</p>
                            </div>
                            <i class="bi bi-chevron-right sns-card-arrow"></i>
                        </div>
                    }

                    <!-- 네이버 지도 -->
                    @if (!string.IsNullOrEmpty(_shopConfig.NaverMapUrl))
                    {
                        <div class="sns-card" @onclick="() => OpenLink(_shopConfig.NaverMapUrl)">
                            <div class="sns-card-icon sns-map">
                                <i class="bi bi-geo-alt-fill"></i>
                            </div>
                            <div class="sns-card-body">
                                <h4 class="sns-card-title">네이버 지도</h4>
                                <p class="sns-card-desc">오시는 길 안내</p>
                            </div>
                            <i class="bi bi-chevron-right sns-card-arrow"></i>
                        </div>
                    }

                    <!-- 네이버 플레이스 QR -->
                    @if (!string.IsNullOrEmpty(_shopConfig.NaverPlaceQrUrl))
                    {
                        <div class="sns-qr-section">
                            <p class="qr-label">QR로 네이버 플레이스 바로가기</p>
                            <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.NaverPlaceQrUrl)">
                                <img src="@_shopConfig.NaverPlaceQrUrl" alt="네이버 플레이스 QR" class="qr-image" loading="lazy" />
                                <span class="qr-tap-hint">
                                    <i class="bi bi-arrows-fullscreen"></i> 터치하여 확대
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- QR 확대 오버레이 -->
@if (_showQrOverlay)
{
    <div class="qr-overlay" @onclick="CloseQr">
        <button class="qr-overlay-close" @onclick="CloseQr">
            <i class="bi bi-x-lg"></i>
        </button>
        <div class="qr-overlay-inner" @onclick:stopPropagation>
            <img src="@_overlayQrUrl" alt="QR Code" class="qr-overlay-img"
                 style="@QrScaleStyle" />
            <div class="qr-overlay-controls">
                <button class="qr-ctrl-btn" @onclick="QrZoomOut">
                    <i class="bi bi-dash-lg"></i>
                </button>
                <span class="qr-ctrl-label">@((int)(_qrScale * 100))%</span>
                <button class="qr-ctrl-btn" @onclick="QrZoomIn">
                    <i class="bi bi-plus-lg"></i>
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<StylePost> _allStyles = new();
    private List<StylePost> _filteredStyles = new();
    private List<StylePost> _pagedStyles = new();
    private StyleCategory _selectedCategory = StyleCategory.전체;
    private int _selectedService = -1; // -1 = 전체
    private string _searchText = "";
    private int _currentPage = 1;
    private int _totalPages = 1;
    private int _pageSize = 9; // 기본 3열 x 3행
    private bool _loading = true;
    private int _activeTab;
    private int _shopTab;

    // 페이지 슬라이드
    private string _slideClass = "";
    private int _pageKey;

    // QR 오버레이
    private bool _showQrOverlay;
    private string _overlayQrUrl = "";
    private double _qrScale = 1.0;

    // 매장 정보 (캐시에서 로드)
    private ShopConfig _shopConfig = new();

    private string QrScaleStyle =>
        $"transform: scale({_qrScale.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)})";

    private const int Rows = 3; // 고정 행 수

    protected override async Task OnInitializedAsync()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("search", out var searchValue))
        {
            _searchText = searchValue.ToString();
        }

        // 병렬 로드 (캐시 히트 시 즉시 반환)
        var loadStylesTask = LoadStyles();
        var loadShopTask = ShopConfigService.GetAsync();
        await Task.WhenAll(loadStylesTask, loadShopTask);
        _shopConfig = loadShopTask.Result;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await DetectPageSize();
        }
    }

    private async Task DetectPageSize()
    {
        try
        {
            var width = await JS.InvokeAsync<int>("eval", "window.innerWidth");
            var cols = width >= 1024 ? 4 : width >= 768 ? 3 : 2;
            var newSize = cols * Rows;
            if (newSize != _pageSize)
            {
                _pageSize = newSize;
                ApplyFilters();
                StateHasChanged();
            }
        }
        catch { /* 무시 */ }
    }

    public void Dispose() { }

    private void SwitchTab(int tab)
    {
        _activeTab = tab;
    }

    private void OpenQr(string url)
    {
        // 오버레이용 고해상도 QR 요청
        _overlayQrUrl = url.Replace("200x200", "400x400");
        _qrScale = 1.0;
        _showQrOverlay = true;
    }

    private void CloseQr()
    {
        _showQrOverlay = false;
    }

    private async Task OpenLink(string url)
    {
        if (!string.IsNullOrEmpty(url))
            await JS.InvokeVoidAsync("open", url, "_blank");
    }

    private void QrZoomIn()
    {
        _qrScale = Math.Min(_qrScale + 0.25, 3.0);
    }

    private void QrZoomOut()
    {
        _qrScale = Math.Max(_qrScale - 0.25, 0.5);
    }

    private bool _loadError;

    private bool HasActiveFilter =>
        _selectedCategory != StyleCategory.전체 || _selectedService >= 0 || !string.IsNullOrWhiteSpace(_searchText);

    private Task ClearAllFilters()
    {
        _selectedCategory = StyleCategory.전체;
        _selectedService = -1;
        _searchText = "";
        _currentPage = 1;
        ApplyFilters();
        return Task.CompletedTask;
    }

    private async Task LoadStyles()
    {
        _loading = true;
        _loadError = false;
        try
        {
            _allStyles = await StyleService.GetAllAsync();
            _allStyles = _allStyles.Where(s => s.IsPublished).OrderByDescending(s => s.CreatedAt).ToList();
            ApplyFilters();
        }
        catch
        {
            _loadError = true;
            _allStyles = new();
            _filteredStyles = new();
        }
        _loading = false;
    }

    private void ApplyFilters()
    {
        _filteredStyles = _allStyles;

        // 카테고리 필터
        if (_selectedCategory != StyleCategory.전체)
        {
            _filteredStyles = _filteredStyles.Where(s => s.Category == _selectedCategory).ToList();
        }

        // 시술 필터
        if (_selectedService >= 0)
        {
            var svc = (ServiceType)_selectedService;
            _filteredStyles = _filteredStyles.Where(s => s.Service == svc).ToList();
        }

        // 검색 필터 (AND) - 초성 검색 지원
        if (!string.IsNullOrWhiteSpace(_searchText))
        {
            var lower = _searchText.ToLower();
            var isChosung = IsChosungOnly(_searchText);
            _filteredStyles = _filteredStyles.Where(s =>
                s.Title.ToLower().Contains(lower) ||
                s.Hashtags.Any(h => h.ToLower().Contains(lower)) ||
                (isChosung && MatchChosung(s.Title, _searchText))
            ).ToList();
        }

        _totalPages = Math.Max(1, (int)Math.Ceiling(_filteredStyles.Count / (double)_pageSize));
        _currentPage = Math.Clamp(_currentPage, 1, _totalPages);
        _pagedStyles = _filteredStyles.Skip((_currentPage - 1) * _pageSize).Take(_pageSize).ToList();
    }

    private Task OnCategoryChanged(StyleCategory category)
    {
        _selectedCategory = category;
        _currentPage = 1;
        ApplyFilters();
        return Task.CompletedTask;
    }

    private Task OnServiceChanged(int serviceValue)
    {
        _selectedService = serviceValue;
        _currentPage = 1;
        ApplyFilters();
        return Task.CompletedTask;
    }

    private Task OnSearch(string searchText)
    {
        _searchText = searchText;
        _currentPage = 1;
        ApplyFilters();
        return Task.CompletedTask;
    }

    private Task OnPageChanged(int page)
    {
        if (page == _currentPage) return Task.CompletedTask;
        _slideClass = page > _currentPage ? "slide-left" : "slide-right";
        _pageKey++;
        _currentPage = page;
        ApplyFilters();
        return Task.CompletedTask;
    }

    // 한글 초성 검색
    private static readonly char[] Chosungs =
        { 'ㄱ', 'ㄲ', 'ㄴ', 'ㄷ', 'ㄸ', 'ㄹ', 'ㅁ', 'ㅂ', 'ㅃ', 'ㅅ', 'ㅆ', 'ㅇ', 'ㅈ', 'ㅉ', 'ㅊ', 'ㅋ', 'ㅌ', 'ㅍ', 'ㅎ' };

    private static bool IsChosungOnly(string text) =>
        text.Length > 0 && text.All(c => Array.IndexOf(Chosungs, c) >= 0);

    private static char GetChosung(char ch)
    {
        if (ch < 0xAC00 || ch > 0xD7A3) return ch;
        return Chosungs[(ch - 0xAC00) / 588];
    }

    private static bool MatchChosung(string text, string pattern)
    {
        if (pattern.Length == 0) return false;
        var textChosungs = text.Select(GetChosung).ToArray();
        var patternArr = pattern.ToCharArray();
        for (int i = 0; i <= textChosungs.Length - patternArr.Length; i++)
        {
            bool match = true;
            for (int j = 0; j < patternArr.Length; j++)
            {
                if (textChosungs[i + j] != patternArr[j]) { match = false; break; }
            }
            if (match) return true;
        }
        return false;
    }
}

<style>
    .salon-list-page {
        max-width: 920px;
        padding-top: 0.5rem;
    }

    /* -- 탭 바 -- */
    .tab-bar {
        display: flex;
        justify-content: center;
        gap: 0;
        background: var(--salon-white);
        border: 1px solid var(--salon-light-gray);
        border-radius: 12px;
        padding: 4px;
        margin: 0.3rem 1rem 0.5rem;
    }

    .tab-item {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        padding: 0.5rem 0.8rem;
        border: none;
