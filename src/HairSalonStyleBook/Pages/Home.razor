@page "/"
@attribute [Authorize]
@inject IStyleService StyleService
@inject NavigationManager Nav

<PageTitle>늘-오던 헤어살롱</PageTitle>

<div class="container salon-list-page">
    <!-- 성별 토글 -->
    <div class="gender-toggle">
        <button class="gender-btn @(_selectedGender == Gender.여성 ? "active female" : "")"
                @onclick="() => OnGenderChanged(Gender.여성)">
            <i class="bi bi-gender-female"></i> 여성
        </button>
        <button class="gender-btn @(_selectedGender == Gender.남성 ? "active male" : "")"
                @onclick="() => OnGenderChanged(Gender.남성)">
            <i class="bi bi-gender-male"></i> 남성
        </button>
    </div>

    <!-- 카테고리 메뉴 -->
    <CategoryMenu SelectedCategory="_selectedCategory" OnCategorySelected="OnCategoryChanged" />

    <!-- 검색바 -->
    <SearchBar SearchText="@_searchText" OnSearch="OnSearch" />

    <!-- 결과 카운트 -->
    @if (!_loading && _filteredStyles.Any())
    {
        <div class="result-count">
            <span>@_filteredStyles.Count</span>개의 스타일
        </div>
    }

    <!-- 스타일 카드 그리드 -->
    @if (_loading)
    {
        <div class="style-grid">
            @for (var i = 0; i < 6; i++)
            {
                <div class="skeleton-card-wrapper">
                    <div class="skeleton skeleton-card"></div>
                    <div class="skeleton skeleton-text mt-2"></div>
                    <div class="skeleton skeleton-text-sm"></div>
                </div>
            }
        </div>
    }
    else if (!_pagedStyles.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-scissors"></i>
            </div>
            <p class="empty-text">등록된 스타일이 없습니다</p>
            <p class="empty-sub">새로운 스타일이 곧 업데이트 됩니다</p>
        </div>
    }
    else
    {
        <div class="style-grid">
            @foreach (var style in _pagedStyles)
            {
                <StyleCard Style="style" />
            }
        </div>

        <!-- 페이지네이션 -->
        @if (_totalPages > 1)
        {
            <Pagination CurrentPage="_currentPage" TotalPages="_totalPages" OnPageChanged="OnPageChanged" />
        }
    }
</div>

@code {
    private List<StylePost> _allStyles = new();
    private List<StylePost> _filteredStyles = new();
    private List<StylePost> _pagedStyles = new();
    private Gender _selectedGender = Gender.여성;
    private StyleCategory _selectedCategory = StyleCategory.전체;
    private string _searchText = "";
    private int _currentPage = 1;
    private int _totalPages = 1;
    private const int PageSize = 10;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("search", out var searchValue))
        {
            _searchText = searchValue.ToString();
        }

        await LoadStyles();
    }

    private async Task LoadStyles()
    {
        _loading = true;
        _allStyles = await StyleService.GetAllAsync();
        _allStyles = _allStyles.Where(s => s.IsPublished).OrderByDescending(s => s.CreatedAt).ToList();
        ApplyFilters();
        _loading = false;
    }

    private void ApplyFilters()
    {
        // 성별 필터
        _filteredStyles = _allStyles.Where(s => s.Gender == _selectedGender).ToList();

        // 카테고리 필터
        if (_selectedCategory != StyleCategory.전체)
        {
            _filteredStyles = _filteredStyles.Where(s => s.Category == _selectedCategory).ToList();
        }

        // 검색 필터
        if (!string.IsNullOrWhiteSpace(_searchText))
        {
            var lower = _searchText.ToLower();
            _filteredStyles = _filteredStyles.Where(s =>
                s.Title.ToLower().Contains(lower) ||
                s.Hashtags.Any(h => h.ToLower().Contains(lower))
            ).ToList();
        }

        _totalPages = Math.Max(1, (int)Math.Ceiling(_filteredStyles.Count / (double)PageSize));
        _currentPage = Math.Clamp(_currentPage, 1, _totalPages);
        _pagedStyles = _filteredStyles.Skip((_currentPage - 1) * PageSize).Take(PageSize).ToList();
    }

    private void OnGenderChanged(Gender gender)
    {
        _selectedGender = gender;
        _currentPage = 1;
        ApplyFilters();
    }

    private Task OnCategoryChanged(StyleCategory category)
    {
        _selectedCategory = category;
        _currentPage = 1;
        ApplyFilters();
        return Task.CompletedTask;
    }

    private Task OnSearch(string searchText)
    {
        _searchText = searchText;
        _currentPage = 1;
        ApplyFilters();
        return Task.CompletedTask;
    }

    private Task OnPageChanged(int page)
    {
        _currentPage = page;
        ApplyFilters();
        return Task.CompletedTask;
    }
}

<style>
    .salon-list-page {
        max-width: 700px;
        padding-top: 0.5rem;
    }

    /* 성별 토글 */
    .gender-toggle {
        display: flex;
        justify-content: center;
        gap: 0;
        padding: 1rem 0 0.3rem;
    }

    .gender-btn {
        font-family: var(--font-serif);
        font-size: 0.85rem;
        padding: 0.5rem 2rem;
        border: 1.5px solid var(--salon-light-gray);
        background: var(--salon-white);
        color: var(--salon-gray);
        cursor: pointer;
        transition: all 0.3s ease;
        letter-spacing: 0.08em;
        font-weight: 400;
    }

    .gender-btn:first-child {
        border-radius: 20px 0 0 20px;
        border-right: none;
    }

    .gender-btn:last-child {
        border-radius: 0 20px 20px 0;
    }

    .gender-btn i {
        font-size: 0.9rem;
        margin-right: 0.2rem;
    }

    .gender-btn.active.female {
        background: linear-gradient(135deg, var(--salon-rose) 0%, var(--salon-rose-light) 100%);
        color: #fff;
        border-color: var(--salon-rose);
        font-weight: 700;
    }

    .gender-btn.active.male {
        background: linear-gradient(135deg, #6b9bd2 0%, #a3c4e8 100%);
        color: #fff;
        border-color: #6b9bd2;
        font-weight: 700;
    }

    /* 결과 카운트 */
    .result-count {
        text-align: center;
        font-family: var(--font-serif);
        font-size: 0.75rem;
        color: var(--salon-gray);
        padding-bottom: 0.5rem;
    }

    .result-count span {
        color: var(--salon-green);
        font-weight: 700;
    }

    /* 빈 상태 */
    .empty-state {
        text-align: center;
        padding: 3rem 1rem;
    }

    .empty-icon {
        width: 60px;
        height: 60px;
        margin: 0 auto 1rem;
        background: var(--salon-light-gray);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .empty-icon i {
        font-size: 1.5rem;
        color: var(--salon-gray);
    }

    .empty-text {
        font-family: var(--font-serif);
        font-size: 0.9rem;
        color: var(--salon-dark);
        margin-bottom: 0.3rem;
    }

    .empty-sub {
        font-family: var(--font-serif);
        font-size: 0.75rem;
        color: var(--salon-gray);
    }

    /* 카드 그리드 */
    .style-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        padding: 0 0.5rem;
    }

    @@media (max-width: 400px) {
        .style-grid {
            gap: 0.75rem;
            padding: 0 0.25rem;
        }

        .gender-btn {
            padding: 0.4rem 1.5rem;
            font-size: 0.8rem;
        }
    }
</style>
