        overflow: hidden;
    }

    .tab-panel {
        width: 100%;
    }

    .tab-fade-in {
        animation: tabFadeIn 0.3s ease;
    }

    @@keyframes tabFadeIn {
        from { opacity: 0; transform: translateY(6px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* -- 서브탭 바 (매장 내) -- */
    .sub-tab-bar {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.8rem 1rem 0.3rem;
