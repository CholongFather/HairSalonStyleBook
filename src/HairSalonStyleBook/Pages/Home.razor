@page "/"
@attribute [Authorize]
@inject IStyleService StyleService
@inject IShopConfigService ShopConfigService
@inject IGalleryService GalleryService
@inject NavigationManager Nav
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>늘~오던 헤어살롱</PageTitle>

<div class="container salon-list-page">
    <!-- 탭 네비게이션 -->
    <div class="tab-bar">
        <button class="tab-item @(_activeTab == 0 ? "active" : "")" @onclick="() => SwitchTab(0)">
            <i class="bi bi-scissors"></i>
            <span>스타일북</span>
        </button>
        <button class="tab-item @(_activeTab == 1 ? "active" : "")" @onclick="() => SwitchTab(1)">
            <i class="bi bi-images"></i>
            <span>갤러리</span>
        </button>
        <button class="tab-item @(_activeTab == 2 ? "active" : "")" @onclick="() => SwitchTab(2)">
            <i class="bi bi-shop"></i>
            <span>매장</span>
        </button>
        <button class="tab-item @(_activeTab == 3 ? "active" : "")" @onclick="() => SwitchTab(3)">
            <i class="bi bi-share"></i>
            <span>SNS</span>
        </button>
    </div>

    <!-- 탭 콘텐츠 영역 -->
    <div class="tab-content-area">
        @if (_activeTab == 0)
        {
            <!-- 탭 0: 스타일북 -->
            <div class="tab-panel tab-fade-in">
                <!-- 카테고리 & 시술 필터 -->
                <CategoryMenu SelectedCategory="_selectedCategory" OnCategorySelected="OnCategoryChanged"
                              SelectedService="_selectedService" OnServiceSelected="OnServiceChanged" />

                <!-- 검색바 -->
                <SearchBar SearchText="@_searchText" OnSearch="OnSearch" />

                <!-- 필터 활성 시 초기화 버튼 -->
                @if (HasActiveFilter)
                {
                    <div class="filter-reset-bar">
                        <span class="filter-active-info">
                            @if (_selectedCategory != StyleCategory.전체) { <span class="filter-chip">@_selectedCategory.ToDisplayName()</span> }
                            @if (_selectedService >= 0) { <span class="filter-chip">@((ServiceType)_selectedService)</span> }
                            @if (!string.IsNullOrWhiteSpace(_searchText)) { <span class="filter-chip">"@_searchText"</span> }
                        </span>
                        <button class="btn-filter-reset" @onclick="ClearAllFilters">
                            <i class="bi bi-x-circle"></i> 필터 해제
                        </button>
                    </div>
                }

                <!-- 결과 카운트 -->
                @if (!_loading && _filteredStyles.Any())
                {
                    <div class="result-count">
                        <span>@_filteredStyles.Count</span>개의 스타일
                    </div>
                }

                <!-- 스타일 카드 그리드 -->
                @if (_loading)
                {
                    <div class="style-grid">
                        @for (var i = 0; i < 6; i++)
                        {
                            <div class="skeleton-card-wrapper">
                                <div class="skeleton skeleton-card"></div>
                                <div class="skeleton skeleton-text mt-2"></div>
                                <div class="skeleton skeleton-text-sm"></div>
                            </div>
                        }
                    </div>
                }
                else if (_loadError)
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-wifi-off"></i>
                        </div>
                        <p class="empty-text">데이터를 불러올 수 없습니다</p>
                        <p class="empty-sub">네트워크 연결을 확인해주세요</p>
                        <button class="btn btn-salon btn-sm mt-2" @onclick="LoadStyles">
                            <i class="bi bi-arrow-clockwise"></i> 다시 시도
                        </button>
                    </div>
                }
                else if (!_pagedStyles.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon">
                            <i class="bi bi-scissors"></i>
                        </div>
                        <p class="empty-text">등록된 스타일이 없습니다</p>
                        <p class="empty-sub">새로운 스타일이 곧 업데이트 됩니다</p>
                    </div>
                }
                else
                {
                    <div class="swipe-area">
                        <div class="style-grid @_slideClass" @key="_pageKey">
                            @foreach (var style in _pagedStyles)
                            {
                                <StyleCard Style="style" />
                            }
                        </div>
                    </div>

                    <!-- 페이지 인디케이터 -->
                    @if (_totalPages > 1)
                    {
                        <div class="page-indicator">
                            <span class="page-indicator-text">@_currentPage / @_totalPages</span>
                        </div>
                        <Pagination CurrentPage="_currentPage" TotalPages="_totalPages" OnPageChanged="OnPageChanged" />
                    }
                }
            </div>
        }
        else if (_activeTab == 2)
        {
            <!-- 탭 2: 매장 -->
            <div class="tab-panel tab-fade-in">
                <!-- 서브탭: WiFi / 계좌 -->
                <div class="sub-tab-bar">
                    <button class="sub-tab-item @(_shopTab == 0 ? "active" : "")" @onclick="() => _shopTab = 0">
                        <i class="bi bi-wifi"></i> WiFi
                    </button>
                    <button class="sub-tab-item @(_shopTab == 1 ? "active" : "")" @onclick="() => _shopTab = 1">
                        <i class="bi bi-credit-card"></i> 계좌
                    </button>
                </div>

                @if (_shopTab == 0)
                {
                    <!-- WiFi 정보 -->
                    <div class="info-card">
                        <div class="info-card-icon">
                            <i class="bi bi-wifi"></i>
                        </div>
                        <h3 class="info-card-title">WiFi 정보</h3>
                        <div class="info-card-divider"></div>
                        <div class="info-row">
                            <span class="info-label">5G</span>
                            <span class="info-value">@_shopConfig.WifiName5G</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">2.4G</span>
                            <span class="info-value">@_shopConfig.WifiName24G</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">비밀번호</span>
                            <span class="info-value info-pw">@_shopConfig.WifiPassword</span>
                        </div>
                        <div class="qr-section">
                            <p class="qr-label">QR 코드로 간편 연결</p>
                            <div class="qr-dual">
                                <div class="qr-dual-item">
                                    <span class="qr-dual-label">5G</span>
                                    <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.Wifi5GQrUrl)">
                                        <img src="@_shopConfig.Wifi5GQrUrl" alt="5G WiFi QR" class="qr-image-sm" loading="lazy" />
                                    </div>
                                </div>
                                <div class="qr-dual-item">
                                    <span class="qr-dual-label">2.4G</span>
                                    <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.Wifi24GQrUrl)">
                                        <img src="@_shopConfig.Wifi24GQrUrl" alt="2.4G WiFi QR" class="qr-image-sm" loading="lazy" />
                                    </div>
                                </div>
                            </div>
                            <span class="qr-tap-hint">
                                <i class="bi bi-arrows-fullscreen"></i> 터치하여 확대
                            </span>
                        </div>
                        <p class="info-note">
                            <i class="bi bi-info-circle"></i>
                            매장 내에서 자유롭게 이용하세요
                        </p>
                    </div>
                }
                else if (_shopTab == 1)
                {
                    <!-- 계좌 정보 -->
                    <div class="info-card">
                        <div class="info-card-icon">
                            <i class="bi bi-credit-card"></i>
                        </div>
                        <h3 class="info-card-title">계좌 정보</h3>
                        <div class="info-card-divider"></div>
                        <div class="info-row">
                            <span class="info-label">은행</span>
                            <span class="info-value">@_shopConfig.BankName</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">계좌번호</span>
                            <span class="info-value info-pw">@_shopConfig.AccountNumber</span>
                        </div>
                        <div class="info-row">
                            <span class="info-label">예금주</span>
                            <span class="info-value">@_shopConfig.AccountHolder</span>
                        </div>
                        <div class="qr-section">
                            <p class="qr-label">QR 스캔하여 계좌정보 확인</p>
                            <div class="qr-wrapper" @onclick="() => OpenQr(_shopConfig.AccountQrUrl)">
                                <img src="@_shopConfig.AccountQrUrl" alt="계좌 QR Code" class="qr-image" loading="lazy" />
                                <span class="qr-tap-hint">
                                    <i class="bi bi-phone"></i> 스마트폰으로 스캔하세요
                                </span>
                            </div>
                        </div>
                        <p class="info-note">
                            <i class="bi bi-info-circle"></i>
                            시술 후 계좌이체도 가능합니다
                        </p>
                    </div>
                }
            </div>
        }
        else if (_activeTab == 3)
        {
            <!-- 탭 3: SNS (QR 코드 관리) -->
            <div class="tab-panel tab-fade-in">
                <p class="sns-guide-text"><i class="bi bi-qr-code-scan"></i> 고객이 핸드폰으로 QR을 스캔하면 해당 페이지로 이동합니다</p>

                @if (_shopConfig.SnsInstagramEnabled && !string.IsNullOrEmpty(_shopConfig.InstagramQrUrl))
                {
                    <div class="sns-section">
                        <div class="sns-section-header">
                            <i class="bi bi-instagram"></i>
                            <span>Instagram</span>
                        </div>
                        <div class="sns-qr-grid sns-qr-single">
                            <div class="sns-qr-card">
                                <div class="sns-qr-card-header sns-instagram">
                                    <i class="bi bi-instagram"></i>
                                    <span>Instagram</span>
                                </div>
                                <div class="sns-qr-card-body" @onclick="() => OpenQr(_shopConfig.InstagramQrUrl)">
                                    <img src="@_shopConfig.InstagramQrUrl" alt="Instagram QR" loading="lazy" />
                                </div>
                                <p class="sns-qr-card-desc">실시간 스타일 업데이트</p>
                            </div>
                        </div>
                        <p class="sns-section-cta">팔로우 부탁드려요!</p>
                    </div>
                }

                @if (_shopConfig.SnsKakaoEnabled && !string.IsNullOrEmpty(_shopConfig.KakaoChannelQrUrl))
                {
                    <div class="sns-section">
                        <div class="sns-section-header">
                            <i class="bi bi-chat-dots-fill sns-kakao-icon"></i>
                            <span>카카오톡 채널</span>
                        </div>
                        <div class="sns-qr-grid sns-qr-single">
                            <div class="sns-qr-card">
                                <div class="sns-qr-card-header sns-kakao">
                                    <i class="bi bi-chat-dots-fill"></i>
                                    <span>카카오톡 채널</span>
                                </div>
                                <div class="sns-qr-card-body" @onclick="() => OpenQr(_shopConfig.KakaoChannelQrUrl)">
                                    <img src="@_shopConfig.KakaoChannelQrUrl" alt="카카오톡 채널 QR" loading="lazy" />
                                </div>
                                <p class="sns-qr-card-desc">채널 추가하고 소식 받기</p>
                            </div>
                        </div>
                        <p class="sns-section-cta">채널 추가 부탁드려요!</p>
                    </div>
                }

                @{
                    var showNaverPlace = _shopConfig.SnsNaverPlaceEnabled && !string.IsNullOrEmpty(_shopConfig.NaverPlaceQrUrl);
                    var showNaverReview = _shopConfig.SnsNaverReviewEnabled && !string.IsNullOrEmpty(_shopConfig.NaverReviewQrUrl);
                }
                @if (showNaverPlace || showNaverReview)
                {
                    <div class="sns-section">
                        <div class="sns-section-header">
                            <span class="naver-n">N</span>
                            <span>네이버</span>
                        </div>
                        <div class="sns-qr-grid @(showNaverPlace && showNaverReview ? "" : "sns-qr-single")">
                            @if (showNaverPlace)
                            {
                                <div class="sns-qr-card">
                                    <div class="sns-qr-card-header sns-naver">
                                        <span class="naver-n">N</span>
                                        <span>네이버 플레이스</span>
                                    </div>
                                    <div class="sns-qr-card-body" @onclick="() => OpenQr(_shopConfig.NaverPlaceQrUrl)">
                                        <img src="@_shopConfig.NaverPlaceQrUrl" alt="네이버 플레이스 QR" loading="lazy" />
                                    </div>
                                    <p class="sns-qr-card-desc">매장 정보 & 예약</p>
                                </div>
                            }

                            @if (showNaverReview)
                            {
                                <div class="sns-qr-card">
                                    <div class="sns-qr-card-header sns-review">
                                        <i class="bi bi-chat-heart"></i>
                                        <span>리뷰</span>
                                    </div>
                                    <div class="sns-qr-card-body" @onclick="() => OpenQr(_shopConfig.NaverReviewQrUrl)">
                                        <img src="@_shopConfig.NaverReviewQrUrl" alt="리뷰 QR" loading="lazy" />
                                    </div>
                                    <p class="sns-qr-card-desc">고객님들의 솔직한 후기</p>
                                </div>
                            }
                        </div>
                        <p class="sns-section-cta">알림설정도 해주세요!</p>
                    </div>
                }
            </div>
        }
        else if (_activeTab == 1)
        {
            <!-- 탭 1: 갤러리 -->
            <div class="tab-panel tab-fade-in">
                @if (_galleryLoading)
                {
                    <div class="gallery-grid">
                        @for (var i = 0; i < 6; i++)
                        {
                            <div class="skeleton skeleton-card"></div>
                        }
                    </div>
                }
                else if (!_galleryItems.Any())
                {
                    <div class="empty-state">
                        <div class="empty-icon"><i class="bi bi-images"></i></div>
                        <p class="empty-text">갤러리에 사진이 없습니다</p>
                        <p class="empty-sub">새로운 사진이 곧 업데이트됩니다</p>
                    </div>
                }
                else
                {
                    <!-- 검색 -->
                    <div class="gallery-search-bar">
                        <i class="bi bi-search"></i>
                        <input type="text" class="gallery-search-input" placeholder="설명, 해시태그 검색..."
                               @bind="_gallerySearch" @bind:event="oninput" />
                        @if (!string.IsNullOrEmpty(_gallerySearch))
                        {
                            <button class="gallery-search-clear" @onclick='() => _gallerySearch = ""'>
                                <i class="bi bi-x-circle-fill"></i>
                            </button>
                        }
                    </div>

                    <!-- 달력 컨트롤 -->
                    <div class="gallery-calendar-section">
                        <button class="gallery-calendar-toggle" @onclick="() => _calendarOpen = !_calendarOpen">
                            <i class="bi @(_calendarOpen ? "bi-chevron-up" : "bi-calendar3")"></i>
                            <span>@_calendarMonth.ToString("yyyy년 M월")</span>
                            @{
                                var monthPhotos = _galleryItems.Count(g => g.VisitDate.HasValue && g.VisitDate.Value.Year == _calendarMonth.Year && g.VisitDate.Value.Month == _calendarMonth.Month);
                            }
                            @if (monthPhotos > 0)
                            {
                                <span class="gallery-cal-badge">@monthPhotos</span>
                            }
                        </button>

                        @if (_calendarOpen)
                        {
                            <div class="gallery-calendar">
                                <div class="gallery-cal-nav">
                                    <button @onclick="() => _calendarMonth = _calendarMonth.AddMonths(-1)"><i class="bi bi-chevron-left"></i></button>
                                    <span>@_calendarMonth.ToString("yyyy년 M월")</span>
                                    <button @onclick="() => _calendarMonth = _calendarMonth.AddMonths(1)"><i class="bi bi-chevron-right"></i></button>
                                </div>
                                <div class="gallery-cal-header">
                                    <span>일</span><span>월</span><span>화</span><span>수</span><span>목</span><span>금</span><span>토</span>
                                </div>
                                <div class="gallery-cal-body">
                                    @{
                                        var firstDay = new DateTime(_calendarMonth.Year, _calendarMonth.Month, 1);
                                        var daysInMonth = DateTime.DaysInMonth(_calendarMonth.Year, _calendarMonth.Month);
                                        var startDow = (int)firstDay.DayOfWeek;
                                    }
                                    @for (var i = 0; i < startDow; i++)
                                    {
                                        <div class="gallery-cal-cell empty"></div>
                                    }
                                    @for (var d = 1; d <= daysInMonth; d++)
                                    {
                                        var day = d;
                                        var date = new DateTime(_calendarMonth.Year, _calendarMonth.Month, day);
                                        var count = _galleryItems.Count(g => g.VisitDate.HasValue && g.VisitDate.Value.Date == date.Date);
                                        var isSelected = _selectedDate.HasValue && _selectedDate.Value.Date == date.Date;
                                        <div class="gallery-cal-cell @(count > 0 ? "has-photo" : "") @(isSelected ? "selected" : "")"
                                             @onclick="() => SelectCalendarDate(date)">
                                            <span>@day</span>
                                            @if (count > 0)
                                            {
                                                <span class="gallery-cal-dot">@count</span>
                                            }
                                        </div>
                                    }
                                </div>
                                @if (_selectedDate.HasValue)
                                {
                                    <button class="btn btn-sm btn-outline-secondary mt-1" style="font-size:0.7rem;"
                                            @onclick="() => _selectedDate = null">
                                        <i class="bi bi-x-lg"></i> 날짜 필터 해제
                                    </button>
                                }
                            </div>
                        }
                    </div>

                    <div class="result-count">
                        <span>@FilteredGalleryItems.Count()</span>장의 사진
                        @if (_selectedDate.HasValue)
                        {
                            <span class="gallery-date-badge">
                                <i class="bi bi-calendar-check"></i> @_selectedDate.Value.ToString("M월 d일")
                                <button class="gallery-date-badge-clear" @onclick="() => _selectedDate = null"><i class="bi bi-x"></i></button>
                            </span>
                        }
                    </div>
                    @if (FilteredGalleryItems.Any(g => g.Hashtags.Any()))
                    {
                        <div class="gallery-hashtag-bar">
                            @foreach (var tag in AllGalleryHashtags)
                            {
                                var t = tag;
                                <button class="gallery-hashtag-chip @(_gallerySearch == "#" + t ? "active" : "")"
                                        @onclick="@(() => _gallerySearch = _gallerySearch == "#" + t ? "" : "#" + t)">
                                    #@t
                                </button>
                            }
                        </div>
                    }
                    <div class="gallery-grid">
                        @foreach (var item in PagedGalleryItems)
                        {
                            <div class="gallery-card frame-@item.Decoration.FrameType" @onclick="() => OpenGalleryEdit(item)">
                                <img src="@item.ImageUrl" alt="@item.Description" loading="lazy"
                                     onload="this.classList.add('loaded')" />
                                @if (!string.IsNullOrEmpty(item.Decoration.TextContent))
                                {
                                    <div class="gd-free-text gd-font-@item.Decoration.TextFont"
                                         style="left:@FPct(item.Decoration.TextX);top:@FPct(item.Decoration.TextY);color:@item.Decoration.TextColor;transform:translate(-50%,-50%) scale(@FScl(item.Decoration.TextScale * 0.6));font-size:0.7rem;">
                                        @item.Decoration.TextContent
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(item.Decoration.Sticker))
                                {
                                    <div class="gd-free-sticker"
                                         style="left:@FPct(item.Decoration.StickerX);top:@FPct(item.Decoration.StickerY);transform:translate(-50%,-50%) scale(@FScl(item.Decoration.StickerScale * 0.6));font-size:1.4rem;">
                                        @item.Decoration.Sticker
                                    </div>
                                }
                                <div class="gallery-watermark">늘~오던</div>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <div class="gallery-desc">@item.Description</div>
                                }
                                @if (item.VisitDate.HasValue)
                                {
                                    <div class="gallery-visit-date">
                                        <i class="bi bi-calendar3"></i> @item.VisitDate.Value.ToString("yy.MM.dd")
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    @if (GalleryTotalPages > 1)
                    {
                        <div class="gallery-paging">
                            <button class="btn btn-sm btn-outline-secondary" disabled="@(_galleryPage <= 1)"
                                    @onclick="() => _galleryPage--">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <span class="gallery-page-info">@_galleryPage / @GalleryTotalPages</span>
                            <button class="btn btn-sm btn-outline-secondary" disabled="@(_galleryPage >= GalleryTotalPages)"
                                    @onclick="() => _galleryPage++">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                    }
                    @if (_galleryHasMore)
                    {
                        <div class="text-center mt-3 mb-2">
                            <button class="btn btn-salon-outline btn-sm gallery-load-more" @onclick="LoadMoreGallery" disabled="@_galleryLoadingMore">
                                @if (_galleryLoadingMore)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                <i class="bi bi-arrow-down-circle"></i> 더보기
                            </button>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>

<!-- 갤러리 편집 오버레이 -->
@if (_galleryEditItem != null)
{
    <div class="gallery-edit-overlay" @onclick="CloseGalleryEdit">
        <div class="gallery-edit-panel" @onclick:stopPropagation>
            <div class="gallery-edit-header">
                <h5>
                    <i class="bi bi-palette"></i> 사진 꾸미기
                    @if (_galleryEditItem.IsLocked)
                    {
                        <span class="badge bg-warning text-dark ms-1" style="font-size:0.6rem;">
                            <i class="bi bi-lock-fill"></i> 잠금
                        </span>
                    }
                </h5>
                <button class="btn-close" @onclick="CloseGalleryEdit"></button>
            </div>
            <div class="gallery-edit-body">
                <GalleryDecorator Item="_galleryEditItem" EditMode="@(!_galleryEditItem.IsLocked)"
                                  ShowWatermark="true"
                                  OnSave="SaveGalleryDecoration"
                                  OnCancel="CloseGalleryEdit" />
            </div>
        </div>
    </div>
}

<!-- QR 확대 오버레이 -->
@if (_showQrOverlay)
{
    <div class="qr-overlay" @onclick="CloseQr">
        <button class="qr-overlay-close" @onclick="CloseQr">
            <i class="bi bi-x-lg"></i>
        </button>
        <div class="qr-overlay-inner" @onclick:stopPropagation>
            <img src="@_overlayQrUrl" alt="QR Code" class="qr-overlay-img"
                 style="@QrScaleStyle" />
            <div class="qr-overlay-controls">
                <button class="qr-ctrl-btn" @onclick="QrZoomOut">
                    <i class="bi bi-dash-lg"></i>
                </button>
                <span class="qr-ctrl-label">@((int)(_qrScale * 100))%</span>
                <button class="qr-ctrl-btn" @onclick="QrZoomIn">
