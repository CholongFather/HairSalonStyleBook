@page "/login"
@inject IAuthService AuthService
@inject ILoginSecurityService SecurityService
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider
@inject IJSRuntime JS

<PageTitle>로그인 - 늘-오던 헤어살롱</PageTitle>

<div class="container login-page">
    <div class="login-card">
        <div class="login-ornament">
            <span class="login-line"></span>
            <span class="login-diamond">&#10047;</span>
            <span class="login-line"></span>
        </div>
        <div class="login-logo">
            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="var(--salon-accent)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="6" cy="6" r="3"/>
                <circle cx="6" cy="18" r="3"/>
                <line x1="20" y1="4" x2="8.12" y2="15.88"/>
                <line x1="14.47" y1="14.48" x2="20" y2="20"/>
                <line x1="8.12" y1="8.12" x2="12" y2="12"/>
            </svg>
        </div>
        <h2 class="login-title">늘-오던 헤어살롱</h2>
        <p class="login-subtitle">로그인</p>

        <div class="mb-3 login-pw-wrapper">
            <input type="@(_showPassword ? "text" : "password")"
                   class="form-control login-input"
                   placeholder="비밀번호를 입력하세요"
                   @bind="_password"
                   @onkeydown="OnKeyDown" />
            <button type="button" class="btn-pw-toggle" @onclick="() => _showPassword = !_showPassword" tabindex="-1">
                <i class="bi @(_showPassword ? "bi-eye-slash" : "bi-eye")"></i>
            </button>
        </div>

        @if (_isBlocked)
        {
            <div class="login-error login-blocked">
                <i class="bi bi-shield-x me-1"></i>이 기기에서의 접근이 차단되었습니다.
            </div>
        }
        else if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="login-error">
                <i class="bi bi-exclamation-circle me-1"></i>@_errorMessage
            </div>
        }

        <button class="btn btn-salon-green w-100" @onclick="HandleLogin" disabled="@(_loading || _isBlocked)">
            @if (_loading)
            {
                <span class="spinner-border spinner-border-sm me-1"></span>
            }
            로그인
        </button>
    </div>
</div>

@code {
    private string _password = "";
    private string _errorMessage = "";
    private bool _loading;
    private bool _showPassword;
    private bool _isBlocked;
    private int _failCount;
    private DateTime? _lockoutUntil;
    private string _fingerprint = "";
    private string _deviceInfo = "";
    private string _screenSize = "";

    protected override async Task OnInitializedAsync()
    {
        // 이미 로그인 되어 있으면 리다이렉트
        var isAuth = await AuthService.IsAuthenticatedAsync();
        if (isAuth)
        {
            var role = await AuthService.GetRoleAsync();
            Nav.NavigateTo(role == "Admin" ? "admin" : "");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // 기기 핑거프린트 생성
            try
            {
                _fingerprint = await JS.InvokeAsync<string>("eval", @"
                    (function() {
                        var ua = navigator.userAgent;
                        var screen = window.screen.width + 'x' + window.screen.height;
                        var tz = Intl.DateTimeFormat().resolvedOptions().timeZone;
                        var lang = navigator.language;
                        var raw = ua + '|' + screen + '|' + tz + '|' + lang;
                        // 간단한 해시 (FNV-1a)
                        var hash = 0x811c9dc5;
                        for (var i = 0; i < raw.length; i++) {
                            hash ^= raw.charCodeAt(i);
                            hash = Math.imul(hash, 0x01000193);
                        }
                        return (hash >>> 0).toString(16).padStart(8, '0');
                    })()
                ");
                _deviceInfo = await JS.InvokeAsync<string>("eval", @"
                    (function() {
                        var ua = navigator.userAgent;
                        if (ua.includes('iPhone')) return 'iPhone';
                        if (ua.includes('iPad')) return 'iPad';
                        if (ua.includes('Android')) return 'Android';
                        if (ua.includes('Windows')) return 'Windows';
                        if (ua.includes('Mac')) return 'Mac';
                        return 'Unknown';
                    })()
                ");
                _screenSize = await JS.InvokeAsync<string>("eval", "window.screen.width + 'x' + window.screen.height");

                // 차단 여부 확인
                _isBlocked = await SecurityService.IsBlockedAsync(_fingerprint);
                StateHasChanged();
            }
            catch { }
        }
    }

    private async Task HandleLogin()
    {
        _errorMessage = "";

        if (_isBlocked) return;

        // 잠금 상태 확인 (5회 실패 시 30초 잠금)
        if (_lockoutUntil.HasValue && DateTime.UtcNow < _lockoutUntil.Value)
        {
            var remaining = (int)(_lockoutUntil.Value - DateTime.UtcNow).TotalSeconds;
            _errorMessage = $"{remaining}초 후 다시 시도해주세요.";
            return;
        }

        _loading = true;
        var role = await AuthService.LoginAsync(_password);

        // 로그인 시도 기록
        _ = SecurityService.LogAttemptAsync(new Models.LoginAttempt
        {
            DeviceFingerprint = _fingerprint,
            DeviceInfo = _deviceInfo,
            ScreenSize = _screenSize,
            Success = role != null
        });

        if (role != null)
        {
            _failCount = 0;
            ((AdminAuthStateProvider)AuthStateProvider).NotifyAuthStateChanged();
            Nav.NavigateTo(role == "Admin" ? "admin" : "");
        }
        else
        {
            _failCount++;
            if (_failCount >= 5)
            {
                _lockoutUntil = DateTime.UtcNow.AddSeconds(30);
                _errorMessage = "로그인 시도가 초과되었습니다. 30초 후 다시 시도해주세요.";
                _failCount = 0;
            }
            else
            {
                _errorMessage = $"비밀번호가 올바르지 않습니다. ({_failCount}/5)";
            }
        }

        _loading = false;
    }

    private async Task OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await HandleLogin();
    }
}

