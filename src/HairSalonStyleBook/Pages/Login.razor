@page "/login"
@inject IAuthService AuthService
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>로그인 - 늘-오던 헤어살롱</PageTitle>

<div class="container login-page">
    <div class="login-card">
        <div class="login-ornament">
            <span class="login-line"></span>
            <span class="login-diamond">&#10047;</span>
            <span class="login-line"></span>
        </div>
        <div class="login-logo">
            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="var(--salon-accent)" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="6" cy="6" r="3"/>
                <circle cx="6" cy="18" r="3"/>
                <line x1="20" y1="4" x2="8.12" y2="15.88"/>
                <line x1="14.47" y1="14.48" x2="20" y2="20"/>
                <line x1="8.12" y1="8.12" x2="12" y2="12"/>
            </svg>
        </div>
        <h2 class="login-title">늘-오던 헤어살롱</h2>
        <p class="login-subtitle">로그인</p>

        <div class="mb-3 login-pw-wrapper">
            <input type="@(_showPassword ? "text" : "password")"
                   class="form-control login-input"
                   placeholder="비밀번호를 입력하세요"
                   @bind="_password"
                   @onkeydown="OnKeyDown" />
            <button type="button" class="btn-pw-toggle" @onclick="() => _showPassword = !_showPassword" tabindex="-1">
                <i class="bi @(_showPassword ? "bi-eye-slash" : "bi-eye")"></i>
            </button>
        </div>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="login-error">
                <i class="bi bi-exclamation-circle me-1"></i>@_errorMessage
            </div>
        }

        <button class="btn btn-salon-green w-100" @onclick="HandleLogin" disabled="@_loading">
            @if (_loading)
            {
                <span class="spinner-border spinner-border-sm me-1"></span>
            }
            로그인
        </button>
    </div>
</div>

@code {
    private string _password = "";
    private string _errorMessage = "";
    private bool _loading;
    private bool _showPassword;

    protected override async Task OnInitializedAsync()
    {
        // 이미 로그인 되어 있으면 리다이렉트
        var isAuth = await AuthService.IsAuthenticatedAsync();
        if (isAuth)
        {
            var role = await AuthService.GetRoleAsync();
            Nav.NavigateTo(role == "Admin" ? "admin" : "");
        }
    }

    private async Task HandleLogin()
    {
        _errorMessage = "";
        _loading = true;

        var role = await AuthService.LoginAsync(_password);

        if (role != null)
        {
            ((AdminAuthStateProvider)AuthStateProvider).NotifyAuthStateChanged();
            Nav.NavigateTo(role == "Admin" ? "admin" : "");
        }
        else
        {
            _errorMessage = "비밀번호가 올바르지 않습니다.";
        }

        _loading = false;
    }

    private async Task OnKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
            await HandleLogin();
    }
}

