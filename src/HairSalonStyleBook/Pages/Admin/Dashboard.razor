    private bool _seeding;
    private int _adminTab;

    // 쓰레기 배출 스케줄
    private readonly List<TrashScheduleItem> _trashSchedule = new()
    {
        new("일반 쓰레기", "월 · 수 · 금", "일몰 후", "bi-bag", "#6b7280"),
